{
  "layer": "top",
  "position": "top",
  "height": 50,
  "margin-top": 8,
  "margin-right": 8,
  "margin-left": 8,
  "modules-left": ["tray", "sway/workspaces"],
  "modules-center": ["clock"],
  "modules-right": [
    "mpd",
    "backlight",
    "pulseaudio",
    "network",
    "battery",
    "custom/power-menu"
  ],
  "sway/workspaces": {
    "focused": "ï†’",
  },

  "custom/nix": {
