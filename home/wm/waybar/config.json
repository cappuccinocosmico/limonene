    "on-click": "playerctl play-pause"
  },

  "tray": {},
  "backlight": {
    "format": "{percent}% {icon}",
    "format-icons": ["î", "î“", "î‘", "î", "î", "î", "îŠ", "îˆ", "î›"]
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-muted": "ğŸ”‡",
    "format-icons": {
      "default": ["ï€¦", "ï€§", "ï€¨"]
    }
  },

  "mpd": {
    "format": "â–¶ : {album} - {title}",
    "format-paused": "â¸ : {album} - {title}"
  },
  "network": {
    "format-wifi": "{essid} ï‡«",
    "format-ethernet": "ï›¿",
    "format-disconnected": "ï ˜"
  },

  "battery": {
    "format": "{capacity}% {icon}",
    "format-charging": "{capacity}% ï®£",
